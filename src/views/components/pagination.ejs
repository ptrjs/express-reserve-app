<% if (totalPage > 1) { %>
<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="?page=<%= page === 1 ? totalPage : page - 1 %>">Prev</a></li>
    <% for (let i = 1; i <= totalPage; i++) { %>
    <li class="page-item <%= page === i ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
    <% } %>
    <li class="page-item"><a class="page-link" href="?page=<%= page === totalPage ? 1 : page + 1 %>">Next</a></li>
  </ul>
</nav>
<% } %>
